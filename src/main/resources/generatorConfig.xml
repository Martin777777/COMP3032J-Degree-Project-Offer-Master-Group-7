    <context id="dsql" targetRuntime="MyBatis3">
        <!-- 数据库连接信息 -->
        <jdbcConnection driverClass="${jdbc.driverClassName}"
                        connectionURL="${jdbc.url}" userId="${jdbc.username}" password="${jdbc.password}"/>

<!--        <javaModelGenerator targetPackage="com.group7.db.model" targetProject="src/main/java"/>-->
<!--        <javaClientGenerator targetPackage="com.group7.db.mapper" targetProject="src/main/java" type="ANNOTATEDMAPPER"/>-->
                <!-- 生成Model对象路径配置 -->
                <javaModelGenerator targetPackage="com.group7.db.model"
                                    targetProject="src/main/java/">
                    <property name="enableSubPackages" value="true" />
                    <property name="trimStrings" value="true" />
                </javaModelGenerator>

                <!-- 生成sqlXML文件路径配置 -->
                <sqlMapGenerator targetPackage="com.group7.db.mappers"
                                 targetProject="src/main/resources/">
                    <property name="enableSubPackages" value="true" />
                </sqlMapGenerator>


                <!-- 生成DAO的类文件路径配置 -->
                <javaClientGenerator targetPackage="com.group7.db.mappers"
                                     targetProject="src/main/java/" type="XMLMAPPER">
                    <property name="enableSubPackages" value="true" />
                </javaClientGenerator>

        <!--要生成哪些表 -->
        <table tableName="User" domainObjectName="User"/>

    </context>
</generatorConfiguration>